<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Messaging Social App</title>
    <link href="/src/stylesheets/output.css" rel="stylesheet" />
  </head>
  <body
    class="h-full bg-gradient-to-tr from-blue-500 to-orange-500 text-white flex flex-col"
  >
    <!-- Greeting Message -->
    <div class="text-center py-4">
      <h1>Hi, hello, greeting <%= user.name %></h1>
    </div>
    <!-- Navbar for mobile -->
    <nav
      class="fixed bottom-0 left-0 right-0 bg-gray-800 p-2 shadow-lg md:hidden"
    >
      <div class="flex justify-around">
        <a href="/home" class="text-white">Home</a>
        <a href="/newsfeed" class="text-white">News Feed</a>
        <a href="#" class="text-white">Profile</a>
        <a href="#" class="text-white">Setting</a>
      </div>
    </nav>

    <!-- Main Content -->
    <div
      class="container mx-auto p-4 flex-1 flex flex-col md:flex-row md:space-x-4"
    >
      <!-- Profile Panel -->
      <aside
        class="bg-gray-800 p-4 rounded-t-lg shadow-md w-full md:w-1/4 md:rounded-lg"
      >
        <div class="flex items-center space-x-4 mb-4">
          <img
            src="/src/images/uploads/<%= user.profile %>"
            alt="User Avatar"
            class="rounded-full h-8"
          />
          <div>
            <h2 class="font-semibold"><%= user.username %></h2>
            <p class="text-gray-400">Welcome back!</p>
          </div>
        </div>
        <a
          href="/logout"
          class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700"
        >
          Logout
        </a>

        <nav class="mt-4">
          <ul class="space-y-2">
            <li><a href="#" class="text-blue-500">Settings</a></li>
            <li><a href="/newsfeed" class="text-blue-500">News Feed</a></li>
          </ul>
        </nav>
      </aside>

      <!-- Main Content Area -->
      <main class="bg-gray-800 p-4 rounded-none shadow-md flex-1 md:rounded-lg">
        <form class="mb-4" action="/post" method="post">
          <div class="mb-2">
            <label for="title" class="block text-gray-400">Title</label>
            <input
              type="text"
              name="title"
              id="title"
              class="w-full p-2 border rounded bg-gray-700 text-white"
            />
          </div>
          <div class="mb-2">
            <label for="message" class="block text-gray-400">Message</label>
            <textarea
              id="message"
              rows="4"
              name="message"
              class="resize-none w-full p-2 border rounded bg-gray-700 text-white"
            ></textarea>
          </div>
          <button
            type="submit"
            class="bg-blue-500 text-white px-4 py-2 rounded"
          >
            Post
          </button>
        </form>

        <!-- User Messages -->
        <div>
          <% user.posts.reverse().forEach(post => {%>
          <div class="bg-gray-700 p-4 rounded-lg mb-2 shadow">
            <h3 class="font-semibold">
              <%= post.title %>
              <span class="font-extralight text-gray-400 text-sm"
                ><%=post.date%></span
              >
            </h3>
            <p><%= post.content %></p>
            <div class="flex justify-end space-x-2 mt-2">
              <span
                class="bg-pink-100 text-pink-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-pink-900 dark:text-pink-300"
                ><%= post.likes.length %></span
              >
              <a class="text-blue-500" href="/like/<%= post._id %>/home">Like</a>
              <a class="text-blue-500" href="/comments/<%= user._id %>"
                >Comment</a
              >
              <a class="text-blue-500" href="/edit/<%= post._id %>"
                >Edit Post</a
              >
            </div>
          </div>
          <%}); %>
        </div>
      </main>
    </div>
  </body>
</html>
