<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload Profile Picture</title>
    <link href="/src/stylesheets/output.css" rel="stylesheet" />
    <style>
      /* Custom styles */
      .bg-gradient-custom {
        background: linear-gradient(to right, #3b82f6, #f43f5e);
      }
    </style>
  </head>
  <body
    class="bg-gradient-custom min-h-screen flex flex-col items-center justify-center"
  >
    <% if (message) { %>
    <div
      class="flex items-center p-4 mb-4 text-sm text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800"
      role="alert"
    >
      <svg
        class="flex-shrink-0 inline w-4 h-4 me-3"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"
        />
      </svg>
      <span class="sr-only">Info</span>
      <div>
        <span class="font-medium">Successully Signup !</span> <%= message %>
      </div>
    </div>
    <% } %>
    <div class="bg-white p-8 rounded-lg shadow-md max-w-sm w-full">
      <h1 class="text-2xl font-semibold mb-6 text-center">
        Upload Profile Picture
      </h1>
      <form
        action="/upload"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-4"
      >
        <div class="flex justify-center">
          <label
            for="avatar"
            class="block w-full bg-blue-500 text-white py-2 px-4 rounded-md text-center cursor-pointer hover:bg-blue-600 transition duration-300"
          >
            Select Image
            <input
              type="file"
              id="avatar"
              name="avatar"
              accept="image/*"
              required
            />
          </label>
        </div>
        <button
          type="submit"
          class="bg-blue-500 text-white py-2 px-4 rounded-md w-full hover:bg-blue-600 transition duration-300"
        >
          Upload
        </button>
      </form>
    </div>
  </body>
</html>
